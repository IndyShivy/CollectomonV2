<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Selected state -->
<item android:state_activated="true">
    <shape android:shape="rectangle">
        <solid android:color="#606060" /> <!-- Replace with your selected item color -->
        <corners android:radius="16dp"/>
    </shape>
</item>
<!-- Default state -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="#393838" /> <!-- Replace with your default item color -->
        <corners android:radius="16dp"/>
    </shape>
</item>
</selector>
