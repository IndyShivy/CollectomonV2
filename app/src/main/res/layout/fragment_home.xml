<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".HomeFragment">


    <View
        android:id="@+id/border2"
        android:layout_width="367dp"
        android:layout_height="62dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/search_box_rounding"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/border"
        android:layout_width="228dp"
        android:layout_height="242dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="332dp"
        android:background="#303030"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewArtists"
        android:layout_width="228dp"
        android:layout_height="242dp"
        android:layout_marginTop="336dp"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:elevation="1dp"
        android:listSelector="#4A4949"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteArtistButton"
        android:layout_width="85dp"
        android:layout_height="77dp"
        android:layout_marginTop="256dp"
        android:contentDescription="@string/deleteartist"
        android:elevation="10dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/listViewArtists"
        app:layout_constraintStart_toStartOf="@+id/listViewArtists"
        app:layout_constraintTop_toTopOf="@+id/listViewArtists"
        app:srcCompat="@drawable/minun"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/backupButton"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="364dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/backup"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/border"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/searchCard"
        style="@style/EditTextStyle"
        android:layout_width="251dp"
        android:layout_height="56dp"
        android:layout_marginTop="144dp"
        android:autofillHints=""
        android:ems="10"
        android:focusable="true"
        android:completionThreshold="1"
        android:focusableInTouchMode="true"
        android:hint="@string/add_artist_name_here_exact"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHighlight="#3F565A"
        android:textColorHint="#3F565A"
        android:textColorLink="#3F565A"
        android:dropDownHeight="240dp"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.193"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/addArtistButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/search_box_rounding"
        android:backgroundTint="#5A0715"
        android:contentDescription="@string/addartist"
        android:scaleType="fitCenter"
        android:text="Add"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/border2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/border2"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/restoreButton"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="464dp"
        android:backgroundTint="@color/icon_background"
        android:text="@string/restore"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/border"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="136dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/applogo"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>