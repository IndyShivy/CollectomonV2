<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Collectomon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowBackground">@color/black</item>
<!--        <item name="android:windowBackground">@color/background_color</item>-->
<!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->

<!--        Theme.MaterialComponents.Light.DarkActionBar-->
<!--    Theme.AppCompat.DayNight.NoActionBar-->
    </style>

    <style name="Theme.Collectomon" parent="Base.Theme.Collectomon" />
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">#45494A</item>
    </style>

    <style name="checkBoxStyleCollect" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/icon_background</item>
        <item name="android:textColorSecondary">#45494A</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="colorPrimary">@color/bottom_nav_selection_pill</item>
        <item name="itemIconSize">26sp</item>
        <item name="itemPaddingTop">20dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_rounding</item>
    </style>

    <style name="TabIndicatorStyle">
        <item name="android:background">@drawable/tab_indicator_background</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">#000000</item>
    </style>



</resources>